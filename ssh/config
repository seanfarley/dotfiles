TCPKeepAlive yes
ServerAliveInterval 60
StrictHostKeyChecking no

Host github.com
  HostName ssh.github.com
  Port 443

Host euclid                     # emacs
  HostName farley.in
  RemoteForward 9999 localhost:9999

Host farley
  HostName farley.io
  # homebrew ssl certs are keg-only, hence the non-standard location
  ProxyCommand proxytunnel -q -E -p farley.io:443 -d 127.0.0.1:22 -C /usr/local/etc/ca-certificates/cert.pem
  DynamicForward 1080
  ServerAliveInterval 60

Host pybay
  HostName pybay.com
  User pybay
  RemoteForward 9999 localhost:9999

Host *.fsffrance.org
  User smf

Host *.osuosl.org
  User smf

Host *
  User sean
  ForwardAgent yes
