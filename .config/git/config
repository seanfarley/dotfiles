[user]
  name = Sean Farley
  email = sean@farley.io

[core]
  editor = emacsclient
  excludesfile = ~/.gitignore
  quotepath = false

[sendemail]
  smtpencryption = tls
  smtpserver = box.farley.io
  smtpserverport = 587
  smtpuser = sean@farley.io
  confirm = auto

[alias]
  gll = log --color=always --graph --topo-order --pretty='%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --date=short
  gl = gll -10

  pull = pull --ff-only

  ci = commit
  cm = commit -m
  ca = commit -a

  co = checkout

  stat = status
  st = status

  d = diff

  unstage = reset HEAD
  uns = reset HEAD

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[difftool "fmdiff"]
  cmd = fmdiff \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[diff]
  tool = fmdiff

[merge]
  tool = ediff

[mergetool "ediff"]
  cmd = ~/.edit.sh -q --eval \"(smf/hg-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
  trustExitCode = true

[mergetool]
  prompt = false

[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
[rebase]
	autosquash = true
[help]
	autocorrect = 1
[magit]
	hideCampaign = true
