[user]
  name = Sean Farley
  email = sean@farley.io

[core]
  editor = ~/.edit.sh
  excludesfile = ~/.gitignore
  quotepath = false

[alias]
  gl = log -10 --color=always --graph --topo-order --pretty='format: %Cgreen%h%Creset %s %C(yellow)%ad%Creset %Cred%d%Creset%n' --date=short
  gll = log --color=always --graph --topo-order --pretty='format: %Cgreen%h%Creset %s %C(yellow)%ad%Creset %Cred%d%Creset%n' --date=short

  pull = pull --ff-only

  ci = commit
  cm = commit -m
  ca = commit -a

  co = checkout

  stat = status
  st = status

  d = diff

  unstage = reset HEAD
  uns = reset HEAD

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[difftool "fmdiff"]
  cmd = fmdiff \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[diff]
  tool = fmdiff

[merge]
  tool = ediff

[mergetool "ediff"]
  cmd = ~/.edit.sh -q --eval \"(hg-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
  trustExitCode = true

[mergetool]
  prompt = false

[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
