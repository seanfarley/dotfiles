TCPKeepAlive yes
ServerAliveInterval 60
StrictHostKeyChecking no

Host github.com
  HostName ssh.github.com
  Port 443

Host euclid                     # emacs
  HostName farley.in
  Port 2195
  RemoteForward 9999 localhost:9999

Host farley
  HostName farley.io
  # homebrew ssl certs are keg-only, hence the non-standard location
  ProxyCommand proxytunnel -q -E -p farley.io:443 -d 127.0.0.1:22 -C /usr/local/etc/ca-certificates/cert.pem
  DynamicForward 1080
  ServerAliveInterval 60

Host pybay
  HostName pybay.com
  User pybay
  RemoteForward 9999 localhost:9999

Host *.fsffrance.org
  User smf
  RemoteCommand zsh -l
  RequestTTY force

Host gcc304.fsffrance.org
  Port 2409

Host *.osuosl.org
  User smf

Host theta
  HostName theta.alcf.anl.gov
  ControlMaster auto
  ControlPath ~/.ssh/master%r@%h:%p
  AddKeysToAgent yes
  IPQoS=throughput
  ServerAliveInterval 60

Host theta*
  User sfarley

Host *
  User sean
  ForwardAgent yes
