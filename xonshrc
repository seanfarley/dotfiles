           "{branch_color}{curr_branch:  {}}"
           "{BOLD_YELLOW}{env_name:  {}}"
           "{BOLD_WHITE}{shlvl: ⟱️ {}}"
           "\n"
           # "{ret_code_color}{ret_code}\n"
           "{#686868}└─{character}{RESET} ") % host_color()

